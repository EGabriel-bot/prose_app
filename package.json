{
  "name": "prose-app",
  "version": "1.0.0",
  "description": "Prose application monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "build": "pnpm --recursive --if-present run build",
    "lint": "pnpm --recursive --if-present run lint",
    "test": "pnpm --recursive --if-present run test",
    "clean": "pnpm --recursive exec -- rm -rf node_modules dist build .next",
    "client:dev": "pnpm --filter prose run dev",
    "client:start": "pnpm --filter prose run start",
    "client:build": "pnpm --filter prose run build --if-present",
    "client:lint": "pnpm --filter prose run lint",
    "server:dev": "pnpm --filter prose-api run dev",
    "server:build": "pnpm --filter prose-api run build",
    "server:deploy": "pnpm --filter prose-api run deploy",
    "server:lint": "pnpm --filter prose-api run lint",
    "install:all": "pnpm install",
    "typecheck": "pnpm --recursive --if-present run typecheck"
  },
  "keywords": [
    "monorepo",
    "pnpm",
    "workspace"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "dependencies": {
    "zod": "^4.1.5"
  }
}
